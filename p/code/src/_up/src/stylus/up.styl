.up
    display none
    position fixed
    top 0
    width 70px
    height 100vh
    cursor pointer
    background-color trasparent
    z-index 100
    &:before
        display block
        content ''
        width 0
        height 0
        margin 30px 0 0 25px
        border-style solid
        border-width 0 10px 10px 10px
        border-color transparent transparent #dbd5c5 transparent
    &:hover
        background-color rgba(31, 60, 71, 0.05)
        &:before
            border-color transparent transparent #b4bfbf transparent


.up_left
    left 0

.up_right
    right 0

.up_back
    &:before
        border-width 10px 10px 0 10px
        border-color #dbd5c5 transparent transparent transparent
    &:hover
        &:before
            border-color #b4bfbf transparent transparent transparent

.up_active
    display block
