doctype html
html
    head
        title Dropdown
        meta(charset="utf-8")
        link(href="css/dropdown.min.css" rel="stylesheet")
        meta(name="viewport" content="width=device-width, height=device-height, initial-scale=1.0")
    body
        
        .dropdown
            .dropdown__toggle [Simple]
            .dropdown__content
                div(style="width: 100px; height: 100px; background: red")
        .dropdown
            .dropdown__toggle [Simple 2]
            .dropdown__content
                div(style="width: 100px; height: 100px; background: green")
        .dropdown(data-dropdown-offset-x="50" data-dropdown-offset-y="50")
            .dropdown__toggle [Offsets]
            .dropdown__content
                div(style="width: 100px; height: 100px; background: blue")
        .dropdown(data-dropdown-custom-x="50" data-dropdown-custom-y="50")
            .dropdown__toggle [Custom X and Y]
            .dropdown__content
                div(style="width: 100px; height: 100px; background: purple")
        .dropdown(data-dropdown-onopen="open" data-dropdown-onclose="close")
            .dropdown__toggle [Onopen and onclose]
            .dropdown__content
                div(style="width: 100px; height: 100px; background: pink")
        .dropdown
            .dropdown__toggle [Simple 3]
            .dropdown__content
                div(style="width: 100px; height: 100px; background: yellow")        
        br
        br
        button(onclick="var s = document.querySelector('#s'); s.style.display = (s.style.display) == \'none\' ? \'block\' : \'none\';") Toggle page scrolling        
        br
        br        
        div(style="position: relative; height: calc(100vh - 100px); border: 1px solid #999")
            div(style="float: left;")
                .dropdown
                    .dropdown__toggle [Left Top]
                    .dropdown__content
                        div(style="width: 120px; height: 120px; background: red")
            div(style="float:right;")
                .dropdown
                    .dropdown__toggle [Right Top]
                    .dropdown__content
                        div(style="width: 120px; height: 120px; background: green")

            div(style="position: absolute; left: calc(50% - 100px); top: calc(50% - 100px); width: 200px; height: 200px; background: gray; overflow: auto")
                .dropdown(data-dropdown-offset-x="50" data-dropdown-offset-y="50" style="float: right")
                    .dropdown__toggle [In scrollable]
                    .dropdown__content
                        div(style="width: 120px; height: 120px; background: red")

            div(style="position: absolute; left: 0; bottom: 0")
                .dropdown
                    .dropdown__toggle [Left Bottom]
                    .dropdown__content
                        div(style="width: 120px; height: 120px; background: blue")

            div(style="position: absolute; right: 0;  bottom: 0")
                .dropdown
                    .dropdown__toggle [Right Bottom]
                    .dropdown__content#test
                        div(style="width: 120px; height: 120px; background: purple")

        
        div#s(style="display: none")
            div#vs(style="width: 20px; height: 2000px; background: green") Only for v-scrolling    
            div#hs(style="width: 2000px; height 20px; background: blue") Only for h-scrolling    
                
        script(src="js/dropdown.min.js")
        script.
            dropdown();
            
            function open() { alert('open'); }
            function close() { alert('close'); }
